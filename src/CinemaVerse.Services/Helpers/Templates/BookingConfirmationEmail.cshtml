@model CinemaVerse.Services.DTOs.Email.Requests.BookingConfirmationEmailDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Confirmed - CineBook</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1A122E;
            color: #F5F5F5;
            line-height: 1.6;
            padding: 20px;
        }
        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #2C253D;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        .header {
            background: linear-gradient(135deg, #8A2BE2 0%, #6A1BB2 100%);
            padding: 40px 30px;
            text-align: center;
        }
        .logo {
            font-size: 32px;
            font-weight: bold;
            color: #FFFFFF;
            letter-spacing: 2px;
            margin-bottom: 10px;
        }
        .success-icon {
            font-size: 48px;
            margin-bottom: 10px;
        }
        .content {
            padding: 40px 30px;
        }
        .title {
            font-size: 28px;
            font-weight: 600;
            color: #FFFFFF;
            margin-bottom: 10px;
            text-align: center;
        }
        .greeting {
            font-size: 16px;
            color: #E0E0E0;
            margin-bottom: 30px;
            text-align: center;
        }
        .booking-details {
            background-color: #352A4A;
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
        }
        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #4A3A5A;
        }
        .detail-row:last-child {
            border-bottom: none;
        }
        .detail-label {
            color: #B0B0B0;
            font-size: 14px;
        }
        .detail-value {
            color: #FFFFFF;
            font-weight: 600;
            font-size: 14px;
        }
        .movie-name {
            color: #8A2BE2;
            font-size: 18px;
            font-weight: 600;
        }
        .tickets-section {
            background-color: #352A4A;
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
        }
        .tickets-title {
            font-size: 18px;
            font-weight: 600;
            color: #FFFFFF;
            margin-bottom: 20px;
        }
        .ticket-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background-color: #2C253D;
            border-radius: 8px;
            margin-bottom: 10px;
        }
        .ticket-item:last-child {
            margin-bottom: 0;
        }
        .ticket-info {
            flex: 1;
        }
        .ticket-number {
            color: #8A2BE2;
            font-weight: 600;
            font-size: 14px;
            margin-bottom: 5px;
        }
        .ticket-seat {
            color: #E0E0E0;
            font-size: 12px;
        }
        .ticket-price {
            color: #FFFFFF;
            font-weight: 600;
            font-size: 16px;
        }
        .total-section {
            background-color: #4A3A5A;
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
        }
        .total-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .total-label {
            font-size: 20px;
            font-weight: 600;
            color: #FFFFFF;
        }
        .total-amount {
            font-size: 28px;
            font-weight: bold;
            color: #8A2BE2;
        }
        .cta-button {
            display: inline-block;
            background-color: #8A2BE2;
            color: #FFFFFF;
            padding: 16px 40px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            text-align: center;
            margin: 30px auto;
            display: block;
            width: fit-content;
            transition: background-color 0.3s;
        }
        .cta-button:hover {
            background-color: #6A1BB2;
        }
        .info-box {
            background-color: #352A4A;
            border-left: 4px solid #8A2BE2;
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
            font-size: 14px;
            color: #E0E0E0;
        }
        .footer {
            background-color: #1A122E;
            padding: 30px;
            text-align: center;
            color: #A0A0A0;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="header">
            <div class="logo">CineBook</div>
            <div class="success-icon">âœ…</div>
        </div>
        
        <div class="content">
            <h1 class="title">Booking Confirmed!</h1>
            <p class="greeting">Dear @Model.UserName,</p>
            <p class="greeting">Your booking has been successfully confirmed. We're excited to see you at the cinema!</p>
            
            <div class="booking-details">
                <div class="detail-row">
                    <span class="detail-label">Movie</span>
                    <span class="detail-value movie-name">@Model.MovieName</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Show Time</span>
                    <span class="detail-value">@Model.ShowStartTime.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Hall</span>
                    <span class="detail-value">@Model.HallNumber</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Branch</span>
                    <span class="detail-value">@Model.BranchName</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Booking ID</span>
                    <span class="detail-value">#@Model.BookingId</span>
                </div>
            </div>
            
            @if (Model.Tickets != null && Model.Tickets.Any())
            {
                <div class="tickets-section">
                    <h3 class="tickets-title">Your Tickets</h3>
                    @foreach (var ticket in Model.Tickets)
                    {
                        <div class="ticket-item">
                            <div class="ticket-info">
                                <div class="ticket-number">@ticket.TicketNumber</div>
                                <div class="ticket-seat">Seat: @ticket.SeatNumber</div>
                            </div>
                            <div class="ticket-price">@ticket.Price @Model.Currency</div>
                        </div>
                    }
                </div>
            }
            
            <div class="total-section">
                <div class="total-row">
                    <span class="total-label">Total Amount</span>
                    <span class="total-amount">@Model.TotalAmount @Model.Currency</span>
                </div>
            </div>
            
            <div class="info-box">
                <strong>ðŸ“± Important:</strong> Please arrive at least 15 minutes before the showtime. 
                Your digital tickets will be available in your account.
            </div>
            
            <a href="#" class="cta-button">View Your Tickets â†’</a>
        </div>
        
        <div class="footer">
            <p>Thank you for choosing CineBook!</p>
            <p>If you have any questions, feel free to contact our support team.</p>
            <p style="margin-top: 20px; font-size: 12px;">
                Â© @DateTime.Now.Year CineBook. All rights reserved.
            </p>
        </div>
    </div>
</body>
</html>
