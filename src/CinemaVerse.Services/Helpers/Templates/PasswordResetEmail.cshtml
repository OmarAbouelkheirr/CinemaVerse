@model CinemaVerse.Services.DTOs.Email.Requests.PasswordResetEmailDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset - CineBook</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1A122E;
            color: #F5F5F5;
            line-height: 1.6;
            padding: 20px;
        }
        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #2C253D;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        .header {
            background: linear-gradient(135deg, #8A2BE2 0%, #6A1BB2 100%);
            padding: 40px 30px;
            text-align: center;
        }
        .logo {
            font-size: 32px;
            font-weight: bold;
            color: #FFFFFF;
            letter-spacing: 2px;
            margin-bottom: 10px;
        }
        .content {
            padding: 40px 30px;
        }
        .title {
            font-size: 28px;
            font-weight: 600;
            color: #FFFFFF;
            margin-bottom: 20px;
            text-align: center;
        }
        .message {
            font-size: 16px;
            color: #E0E0E0;
            margin-bottom: 30px;
            text-align: center;
        }
        .reset-box {
            background-color: #352A4A;
            border-radius: 12px;
            padding: 30px;
            margin: 30px 0;
            text-align: center;
        }
        .reset-link {
            display: inline-block;
            background-color: #8A2BE2;
            color: #FFFFFF;
            padding: 16px 40px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            margin: 20px 0;
            transition: background-color 0.3s;
        }
        .reset-link:hover {
            background-color: #6A1BB2;
        }
        .expiry-notice {
            background-color: #4A3A5A;
            border-left: 4px solid #8A2BE2;
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
            font-size: 14px;
            color: #E0E0E0;
        }
        .warning {
            background-color: #4A3A5A;
            border-left: 4px solid #FF6B6B;
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
            font-size: 14px;
            color: #E0E0E0;
        }
        .footer {
            background-color: #1A122E;
            padding: 30px;
            text-align: center;
            color: #A0A0A0;
            font-size: 14px;
        }
        .alternative-link {
            margin-top: 20px;
            padding: 15px;
            background-color: #352A4A;
            border-radius: 8px;
            font-size: 12px;
            color: #B0B0B0;
            word-break: break-all;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="header">
            <div class="logo">CineBook</div>
        </div>
        
        <div class="content">
            <h1 class="title">Reset Your Password üîê</h1>
            <p class="message">
                We received a request to reset your password. Click the button below to create a new password.
            </p>
            
            <div class="reset-box">
                <a href="@Model.ResetLink" class="reset-link">Reset Password ‚Üí</a>
            </div>
            
            <div class="expiry-notice">
                <strong>‚è∞ This link will expire on:</strong><br>
                @Model.ExpirationTime.ToString("MMMM dd, yyyy 'at' HH:mm")
            </div>
            
            <div class="warning">
                <strong>‚ö†Ô∏è Security Notice:</strong><br>
                If you didn't request this password reset, please ignore this email. 
                Your password will remain unchanged.
            </div>
            
            <div class="alternative-link">
                <strong>Can't click the button?</strong><br>
                Copy and paste this link into your browser:<br>
                <span style="color: #8A2BE2;">@Model.ResetLink</span>
            </div>
        </div>
        
        <div class="footer">
            <p>This is an automated message from CineBook.</p>
            <p>For security reasons, never share this link with anyone.</p>
            <p style="margin-top: 20px; font-size: 12px;">
                ¬© @DateTime.UtcNow.Year CineBook. All rights reserved.
            </p>
        </div>
    </div>
</body>
</html>
