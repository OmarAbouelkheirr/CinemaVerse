@model CinemaVerse.Services.DTOs.Email.Requests.WelcomeEmailDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to CineBook</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1A122E;
            color: #F5F5F5;
            line-height: 1.6;
            padding: 20px;
        }
        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #2C253D;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        .header {
            background: linear-gradient(135deg, #8A2BE2 0%, #6A1BB2 100%);
            padding: 40px 30px;
            text-align: center;
        }
        .logo {
            font-size: 32px;
            font-weight: bold;
            color: #FFFFFF;
            letter-spacing: 2px;
            margin-bottom: 10px;
        }
        .content {
            padding: 40px 30px;
        }
        .welcome-title {
            font-size: 28px;
            font-weight: 600;
            color: #FFFFFF;
            margin-bottom: 20px;
            text-align: center;
        }
        .welcome-message {
            font-size: 16px;
            color: #E0E0E0;
            margin-bottom: 30px;
            text-align: center;
        }
        .highlight {
            color: #8A2BE2;
            font-weight: 600;
        }
        .features {
            background-color: #352A4A;
            border-radius: 12px;
            padding: 25px;
            margin: 30px 0;
        }
        .feature-item {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            color: #E0E0E0;
        }
        .feature-item:last-child {
            margin-bottom: 0;
        }
        .feature-icon {
            width: 24px;
            height: 24px;
            margin-right: 15px;
            color: #8A2BE2;
        }
        .cta-button {
            display: inline-block;
            background-color: #8A2BE2;
            color: #FFFFFF;
            padding: 16px 40px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            text-align: center;
            margin: 30px auto;
            display: block;
            width: fit-content;
            transition: background-color 0.3s;
        }
        .cta-button:hover {
            background-color: #6A1BB2;
        }
        .footer {
            background-color: #1A122E;
            padding: 30px;
            text-align: center;
            color: #A0A0A0;
            font-size: 14px;
        }
        .footer-links {
            margin-top: 15px;
        }
        .footer-links a {
            color: #8A2BE2;
            text-decoration: none;
            margin: 0 10px;
        }
    </style>
</head>
