@model CinemaVerse.Services.DTOs.Email.Requests.BookingCancellationEmailDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Cancelled - CineBook</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1A122E;
            color: #F5F5F5;
            line-height: 1.6;
            padding: 20px;
        }
        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #2C253D;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        .header {
            background: linear-gradient(135deg, #8A2BE2 0%, #6A1BB2 100%);
            padding: 40px 30px;
            text-align: center;
        }
        .logo {
            font-size: 32px;
            font-weight: bold;
            color: #FFFFFF;
            letter-spacing: 2px;
            margin-bottom: 10px;
        }
        .content {
            padding: 40px 30px;
        }
        .title {
            font-size: 28px;
            font-weight: 600;
            color: #FFFFFF;
            margin-bottom: 10px;
            text-align: center;
        }
        .greeting {
            font-size: 16px;
            color: #E0E0E0;
            margin-bottom: 30px;
            text-align: center;
        }
        .cancellation-box {
            background-color: #352A4A;
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
        }
        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #4A3A5A;
        }
        .detail-row:last-child {
            border-bottom: none;
        }
        .detail-label {
            color: #B0B0B0;
            font-size: 14px;
        }
        .detail-value {
            color: #FFFFFF;
            font-weight: 600;
            font-size: 14px;
        }
        .movie-name {
            color: #8A2BE2;
            font-size: 18px;
            font-weight: 600;
        }
        .refund-section {
            background-color: #4A3A5A;
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            text-align: center;
        }
        .refund-label {
            font-size: 16px;
            color: #B0B0B0;
            margin-bottom: 10px;
        }
        .refund-amount {
            font-size: 28px;
            font-weight: bold;
            color: #8A2BE2;
        }
        .reason-box {
            background-color: #352A4A;
            border-left: 4px solid #FF6B6B;
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
            font-size: 14px;
            color: #E0E0E0;
        }
        .info-box {
            background-color: #352A4A;
            border-left: 4px solid #8A2BE2;
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
            font-size: 14px;
            color: #E0E0E0;
        }
        .cta-button {
            display: inline-block;
            background-color: #8A2BE2;
            color: #FFFFFF;
            padding: 16px 40px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            text-align: center;
            margin: 30px auto;
            display: block;
            width: fit-content;
            transition: background-color 0.3s;
        }
        .cta-button:hover {
            background-color: #6A1BB2;
        }
        .footer {
            background-color: #1A122E;
            padding: 30px;
            text-align: center;
            color: #A0A0A0;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="header">
            <div class="logo">CineBook</div>
        </div>
        
        <div class="content">
            <h1 class="title">Booking Cancelled</h1>
            <p class="greeting">Dear @Model.FullName,</p>
            <p class="greeting">
                We're sorry to inform you that your booking has been cancelled.
            </p>
            
            <div class="cancellation-box">
                <div class="detail-row">
                    <span class="detail-label">Booking ID</span>
                    <span class="detail-value">#@Model.BookingId</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Movie</span>
                    <span class="detail-value movie-name">@Model.MovieName</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Show Time</span>
                    <span class="detail-value">@Model.ShowStartTime.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.CancellationReason))
            {
                <div class="reason-box">
                    <strong>Reason for Cancellation:</strong><br>
                    @Model.CancellationReason
                </div>
            }
            
            @if (Model.RefundAmount > 0)
            {
                <div class="refund-section">
                    <div class="refund-label">Refund Amount</div>
                    <div class="refund-amount">@Model.RefundAmount @Model.Currency</div>
                    <p style="margin-top: 15px; font-size: 14px; color: #B0B0B0;">
                        The refund will be processed to your original payment method within 5-7 business days.
                    </p>
                </div>
            }
            
            <div class="info-box">
                <strong>ℹ️ What's Next?</strong><br>
                If you have any questions about this cancellation or would like to book again, 
                please don't hesitate to contact our support team. We're here to help!
            </div>
            
            <a href="#" class="cta-button">Book Again →</a>
        </div>
        
        <div class="footer">
            <p>We're sorry for any inconvenience caused.</p>
            <p>If you have any questions, feel free to reach out to our support team.</p>
            <p style="margin-top: 20px; font-size: 12px;">
                © @DateTime.UtcNow.Year CineBook. All rights reserved.
            </p>
        </div>
    </div>
</body>
</html>
