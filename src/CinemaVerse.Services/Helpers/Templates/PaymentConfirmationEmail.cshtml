@model CinemaVerse.Services.DTOs.Email.Requests.PaymentConfirmationEmailDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Confirmed - CineBook</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1A122E;
            color: #F5F5F5;
            line-height: 1.6;
            padding: 20px;
        }
        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #2C253D;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        .header {
            background: linear-gradient(135deg, #8A2BE2 0%, #6A1BB2 100%);
            padding: 40px 30px;
            text-align: center;
        }
        .logo {
            font-size: 32px;
            font-weight: bold;
            color: #FFFFFF;
            letter-spacing: 2px;
            margin-bottom: 10px;
        }
        .success-icon {
            font-size: 48px;
            margin-bottom: 10px;
        }
        .content {
            padding: 40px 30px;
        }
        .title {
            font-size: 28px;
            font-weight: 600;
            color: #FFFFFF;
            margin-bottom: 20px;
            text-align: center;
        }
        .message {
            font-size: 16px;
            color: #E0E0E0;
            margin-bottom: 30px;
            text-align: center;
        }
        .payment-details {
            background-color: #352A4A;
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
        }
        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #4A3A5A;
        }
        .detail-row:last-child {
            border-bottom: none;
        }
        .detail-label {
            color: #B0B0B0;
            font-size: 14px;
        }
        .detail-value {
            color: #FFFFFF;
            font-weight: 600;
            font-size: 14px;
        }
        .movie-name {
            color: #8A2BE2;
            font-size: 18px;
            font-weight: 600;
        }
        .amount-section {
            background-color: #4A3A5A;
            border-radius: 12px;
            padding: 30px;
            margin: 25px 0;
            text-align: center;
        }
        .amount-label {
            font-size: 16px;
            color: #B0B0B0;
            margin-bottom: 10px;
        }
        .amount-value {
            font-size: 36px;
            font-weight: bold;
            color: #8A2BE2;
        }
        .transaction-id {
            background-color: #2C253D;
            padding: 15px;
            border-radius: 8px;
            margin: 20px 0;
            font-size: 12px;
            color: #B0B0B0;
            word-break: break-all;
        }
        .transaction-id strong {
            color: #8A2BE2;
        }
        .info-box {
            background-color: #352A4A;
            border-left: 4px solid #8A2BE2;
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
            font-size: 14px;
            color: #E0E0E0;
        }
        .cta-button {
            display: inline-block;
            background-color: #8A2BE2;
            color: #FFFFFF;
            padding: 16px 40px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            text-align: center;
            margin: 30px auto;
            display: block;
            width: fit-content;
            transition: background-color 0.3s;
        }
        .cta-button:hover {
            background-color: #6A1BB2;
        }
        .footer {
            background-color: #1A122E;
            padding: 30px;
            text-align: center;
            color: #A0A0A0;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="header">
            <div class="logo">CineBook</div>
            <div class="success-icon">ðŸ’³</div>
        </div>
        
        <div class="content">
            <h1 class="title">Payment Confirmed!</h1>
            <p class="message">
                Your payment has been successfully processed. Your booking is now confirmed!
            </p>
            
            <div class="amount-section">
                <div class="amount-label">Amount Paid</div>
                <div class="amount-value">@Model.Amount @Model.Currency</div>
            </div>
            
            <div class="payment-details">
                <div class="detail-row">
                    <span class="detail-label">Booking ID</span>
                    <span class="detail-value">#@Model.BookingId</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Movie</span>
                    <span class="detail-value movie-name">@Model.MovieName</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Show Time (UTC)</span>
                    <span class="detail-value">@Model.ShowStartTime.ToString("MMMM dd, yyyy 'at' HH:mm") UTC</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Transaction Date</span>
                    <span class="detail-value">@Model.TransactionDate.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                </div>
            </div>
            
            <div class="transaction-id">
                <strong>Transaction ID:</strong> @Model.PaymentIntentId
            </div>
            
            <div class="info-box">
                <strong>âœ… Payment Status:</strong> Completed<br>
                <strong>ðŸ“§ Receipt:</strong> A detailed receipt has been sent to your email.<br>
                <strong>ðŸŽ« Tickets:</strong> Your digital tickets are now available in your account.
            </div>
            
            <a href="#" class="cta-button">View Booking Details â†’</a>
        </div>
        
        <div class="footer">
            <p>Thank you for your payment!</p>
            <p>If you have any questions about this transaction, please contact our support team.</p>
            <p style="margin-top: 20px; font-size: 12px;">
                Â© @DateTime.UtcNow.Year CineBook. All rights reserved.
            </p>
        </div>
    </div>
</body>
</html>
