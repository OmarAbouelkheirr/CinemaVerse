{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/cinemaverse-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=.;Database=CinemaVerseDb;Trusted_Connection=True;TrustServerCertificate=True;"
    },
  "Stripe": {
    "SecretKey": "sk_test_your_stripe_secret_key_here",
    "PublishableKey": "pk_test_your_stripe_publishable_key_here",
    "WebhookSecret": "whsec_your_webhook_secret_here"
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderName": "CinemaVerse",
    "SenderEmail": "noreply@cinemaverse.com",
    "Username": "your-email@gmail.com",
    "Password": "your-app-password-here",
    "EnableSsl": true
  },
  "Auth": {
    "RequireEmailVerificationBeforeLogin": false
  },
  "Jwt": {
    "Secret": "YourSuperSecretKeyHere-MustBeAtLeast32Characters!",
    "Issuer": "CinemaVerseApi",
    "Audience": "CinemaVerseApiUsers",
    "ExpirationMinutes": 60
  },
  "EmailVerification": {
    "ExpirationHours": 24,
    "VerificationLinkBaseUrl": "https://localhost:7001"
  },
  "PasswordReset": {
    "ExpirationHours": 1,
    "ResetLinkBaseUrl": "https://localhost:7227",
    "ResetPagePath": "/reset-password"
  },
  "Caching": {
    "EnableCaching": true,
    "Minutes": 10
  }
}


